<div class="col-md-12">
	<h4 class="left">Info</h4>
	<div id="info-holder">
		<div id="personal-info">
			<div class="col-sm-12 personal" id="age">
				<div class="float-left">Age:</div>
				<div class="float-right">
					<%= user.escape("age") ? user.escape("age") : "" %>
				</div>
			</div>
			
			<div class="col-sm-12 personal" id="city">
				<div class="float-left">Location:</div>
				<div class="float-right">
					<%= user.escape("location") ? user.escape("location") : ""%>
				</div>
			</div>
			
			<div class="col-sm-12 personal" id="city">
				<div class="float-left">Current Status:</div>
				<div class="float-right">
					<%= user.escape("current_status") ? user.escape("current_status") : "" %>
				</div>
			</div>
			
			<button class="btn btn-primary add" id="edit-info">Edit Info</button>
		</div>
	
		<form class="hidden" id="personal-info-form">
				<input
					type="text"
					placeholder="First Name..."
					value="<%= user.escape("first_name") %>"
					name="user[first_name]"
					class="form-control"
					id="personal-info-focus"
				>
				<input
					type="text"
					placeholder="Last Name..."
					value="<%= user.escape("last_name") %>"
					name="user[last_name]"
					class="form-control"
				>
				
				<input
					type="text"
					placeholder="location"
					value="<%= user.escape("location") %>"
					name="user[location]"
					class="form-control"
				>
				
				<input
					type="number"
					value="<%= user.escape('age') %>"
					placeholder="Age"
					name="user[age]"
					class="form-control"
				>
				
				<input
					type="text"
					value="<%= user.escape("current_status") %>"
					placeholder="Status"
					name="user[current_status]"
					class="form-control"
				>

				<select class="form-control">
					<option name="user[gender]" value="Male">Male</option>
					<option name="user[gender]" value="Female">Female</option>
				</select>

				<input type="submit" value="Update" class="btn btn-primary form" id="update-info">
				<button class="btn btn-primary form" id="close-info-form">Close</button>
		</form>
	</div>
</div>